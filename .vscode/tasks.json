{
    "version": "2.0.0",
    "inputs": [
        {
            "id": "entry",
            "type": "promptString",
            "description": "文件路径或文件夹路径"
        },
        {
            "id": "crate",
            "type": "promptString",
            "description": "crate 名"
        },
        {
            "id": "example",
            "type": "promptString",
            "description": "示例名"
        },
        {
            "id": "test",
            "type": "promptString",
            "description": "测试名"
        },
        {
            "id": "bench",
            "type": "promptString",
            "description": "基准测试名"
        },
        {
