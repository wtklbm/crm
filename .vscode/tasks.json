    "tasks": [
        {
            "label": "cargoe: 翻译 Rust 模块",
            "type": "shell",
            "command": "cargoe",
            "args": ["t", "module"],
            "problemMatcher": [],
            "presentation": {
                "focus": true,
                "clear": true
            }
        },
        {
            "label": "cmtor: 翻译文件/文件夹",
            "type": "shell",
            "command": "cmtor",
            "args": ["p", "${input:entry}"],
            "problemMatcher": [],
            "presentation": {
                "focus": true,
                "clear": true
            }
        },
        {
            "label": "Rust: 运行",
            "type": "cargo",
            "command": "run",
            "args": ["-v", "--all-features"],
            "problemMatcher": ["$rustc"],
            "options": {
                "env": {
                    "RUST_BACKTRACE": "1"
                }
            },
            "presentation": {
                "focus": true,
                "clear": true
            }
        },
        {
            "label": "Rust: Nightly 运行",
            "type": "cargo",
            "command": "+nightly",
            "args": ["run", "-v", "--all-features","--", "use", "rustcc2"],
            "problemMatcher": ["$rustc"],
            "options": {
                "env": {
                    "RUST_BACKTRACE": "1"
                }
            },
            "presentation": {
                "focus": true,
                "clear": true
            }
        },
        {
